<nav class="navbar navbar-light bg-light">
  <form class="form-inline ml-auto">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    <button class="btn btn-outline-primary my-2 my-sm-0 ml-2"><%= link_to 'Add Flat', new_flat_path%></button>
  </form>
</nav>




<h1 class="d-flex justify-content-center"><%= "All our flats (#{@flats.count})" %> </h1>

<div class="container">
    <div class="row">
<% @flats.each do |flat| %>
  <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card">
        <div class="card-image" style="background-image: url('https://countrysidestays-japan.com/img/article/tsuru,kosuga/story_mv.jpg')"></div>
          <div class="card-body">
          <div class="card-content">
            <div class="card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.description %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span class="mr-2"><%= flat.number_of_guests %></span>
                 <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="card-actions">
            <%= link_to 'More info', flat_path(flat), class: 'ml-3' %> 
            <%= link_to 'Edit', flat_path(flat), class: 'text-warning ml-2' %>
            <%= link_to 'Delete', flat_path(flat), class: 'text-danger ml-2', method: :delete %>
          </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
</div>
